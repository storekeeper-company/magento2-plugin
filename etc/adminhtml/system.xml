<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>

        <tab id="storekeeper" translate="label" sortOrder="1000000">
            <label>Storekeeper</label>
        </tab>

        <section id="storekeeper_general" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>General</label>
            <tab>storekeeper</tab>
            <resource>StoreKeeper_StoreKeeper::configuration</resource>

            <group id="general" translate="label" type="text" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>

                <field
                    id="storekeeper_additional_data"
                    type="StoreKeeper\StoreKeeper\Block\Adminhtml\Form\Field\AdditionalData"
                    translate="label" sortOrder="1" showInDefault="0" showInWebsite="1" showInStore="1">
                    <label>Additional information</label>
                </field>

                <field id="enabled" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="debug_logs" translate="label" type="select" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Debug logs</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="storekeeper_connect" translate="label comment" type="button" sortOrder="3" showInDefault="0" showInWebsite="0" showInStore="1">
                    <frontend_model>StoreKeeper\StoreKeeper\Block\System\Config\Connect</frontend_model>
                    <label>StoreKeeper Connect</label>
                </field>

                <field id="storekeeper_token" type="text" translate="label" sortOrder="5" showInDefault="0" showInWebsite="0" showInStore="1">
                    <label>Token</label>
                    <depends>
                        <field id="storekeeper_general/general/debug_logs">1</field>
                    </depends>
                </field>

                <field id="storekeeper_info_token" type="text" translate="label" sortOrder="6" showInDefault="0" showInWebsite="1" showInStore="1">
                    <label>Info Token</label>
                    <depends>
                        <field id="storekeeper_general/general/debug_logs">1</field>
                    </depends>
                </field>

                <field id="shop_uuid" type="text" translate="label" sortOrder="7" showInDefault="0" showInWebsite="1" showInStore="1">
                    <label>Shop Uuid</label>
                    <attribute type="disabled">1</attribute>
                    <depends>
                        <field id="storekeeper_general/general/debug_logs">1</field>
                    </depends>
                </field>

                <field id="storekeeper_sync_auth" type="text" translate="label" sortOrder="8" showInDefault="0" showInWebsite="0" showInStore="1">
                    <label>Sync Auth</label>
                    <depends>
                        <field id="storekeeper_general/general/debug_logs">1</field>
                    </depends>
                </field>

                <field id="storekeeper_guest_auth" type="text" translate="label" sortOrder="9" showInDefault="0" showInWebsite="0" showInStore="1">
                    <label>Guest Auth</label>
                    <depends>
                        <field id="storekeeper_general/general/debug_logs">1</field>
                    </depends>
                </field>

                <field id="storekeeper_store_information" type="text" translate="label" sortOrder="10" showInDefault="0" showInWebsite="0" showInStore="1">
                    <label>Store Information</label>
                    <depends>
                        <field id="storekeeper_general/general/debug_logs">1</field>
                    </depends>
                </field>

                <field
                    id="storekeeper_shop_id"
                    type="StoreKeeper\StoreKeeper\Block\Adminhtml\Form\Field\ShopId"
                    translate="label" sortOrder="11" showInDefault="0" showInWebsite="0" showInStore="1">
                    <label>Store ID</label>
                </field>

                <field
                    id="storekeeper_store_name"
                    type="StoreKeeper\StoreKeeper\Block\Adminhtml\Form\Field\StoreName"
                    translate="label" sortOrder="12" showInDefault="0" showInWebsite="0" showInStore="1">
                    <label>Store Name</label>
                </field>

                <field id="storekeeper_shop_language" type="text" translate="label" sortOrder="13" showInDefault="0" showInWebsite="0" showInStore="1">
                    <label>Shop Language</label>
                </field>

                <field id="storekeeper_sync_mode" type="select" translate="label" sortOrder="14" showInDefault="0" showInWebsite="0" showInStore="1">
                    <label>Sync Mode</label>
                    <source_model>StoreKeeper\StoreKeeper\Model\Config\Source\SyncModes</source_model>
                </field>

                <field id="storekeeper_refresh_store"
                    type="StoreKeeper\StoreKeeper\Block\Adminhtml\Form\Field\RefreshStore"
                    translate="label" sortOrder="15" showInDefault="0" showInWebsite="0" showInStore="1">
                    <label>Store</label>
                </field>

                <field id="storekeeper_auth_key"
                    type="StoreKeeper\StoreKeeper\Block\Adminhtml\Form\Field\AuthKey"
                    translate="label" sortOrder="16" showInDefault="0" showInWebsite="0" showInStore="1">
                    <label>Auth Key</label>
                    <depends>
                        <field id="storekeeper_general/general/debug_logs">1</field>
                    </depends>
                </field>

                <field id="storekeeper_disconnect_storeview"
                    type="StoreKeeper\StoreKeeper\Block\Adminhtml\Form\Field\DisconnectStore"
                    translate="label" sortOrder="17" showInDefault="0" showInWebsite="0" showInStore="1">
                    <label>Disconnect Store</label>
                </field>

            </group>
        </section>

        <section id="payment">
            <group id="storekeeper_payment" translate="label" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>StoreKeeper Payments</label>
                <field id="active" translate="label comment" sortOrder="1" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>

        <section id="storekeeper_payment_methods" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Payment Methods</label>
            <tab>storekeeper</tab>
            <resource>StoreKeeper_StoreKeeper::configuration</resource>
            <group id="payment_methods" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <field id="enabled" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
            <include path="StoreKeeper_StoreKeeper::paymentmethods.xml" />
        </section>
    </system>
</config>
